        <TextBox x:Name="StachuBet" HorizontalAlignment="Left" Height="23" Margin="244,337,0,0" TextWrapping="Wrap" Text="Stachu" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="MirekBet" HorizontalAlignment="Left" Height="23" Margin="244,356,0,0" TextWrapping="Wrap" Text="Mirek" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button Content="wrzuca" HorizontalAlignment="Left" Margin="95,380,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="Bet" HorizontalAlignment="Left" Height="23" Margin="175,379,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="64"/>
        <Label Content="zł na yorka numer" HorizontalAlignment="Left" Margin="244,377,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="DogNumber" HorizontalAlignment="Left" Height="23" Margin="386,380,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="58"/>
        <Button Content="Wypuść psy" HorizontalAlignment="Left" Margin="511,285,0,0" VerticalAlignment="Top" Width="271" Height="115" FontSize="50"/>

    </Grid>
</Window>
