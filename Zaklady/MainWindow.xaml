        <Label Content="Zakłady" HorizontalAlignment="Left" Margin="244,285,0,0" VerticalAlignment="Top" Width="112"/>
        <Label Content="Symulator przewalania oszczędności na wyścigi ledwo biegnących yorków" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Width="434"/>
        <RadioButton x:Name="ZbychuRad" Content="" HorizontalAlignment="Left" Margin="10,316,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="StachuRad" Content="" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="MirekRad" Content="" HorizontalAlignment="Left" Margin="10,356,0,0" VerticalAlignment="Top"/>
