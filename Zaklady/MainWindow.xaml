        xmlns:local="clr-namespace:Zaklady"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="3" BorderBrush="Black" Margin="0,0,0,170">
            <Image Source="trasa.png" HorizontalAlignment="Left" Height="229" Margin="5,5,0,-4" VerticalAlignment="Top" Width="772" OpacityMask="{x:Null}" Stretch="Fill"/>
